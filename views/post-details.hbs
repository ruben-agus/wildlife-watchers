<section class="container">


    <div class="post-details-view flexbox-row">
        {{#if youAreTheOwnerOfThisPost}}
        <a href="/edit-post/{{this._id}}">
            <button>Edit my post</button>
        </a>
        <form action="/edit-post/{{this.id}}/delete" method="POST">

            <button onclick="Submit">Delete</button>
        </form>
        {{/if}}
    </div>
    <div class="post-details-view">
        <div class="post-details-content">
            <h1>{{title}}</h1>
            <div><img src="{{postImg}}" alt=""></div>
            <p>{{content}}</p>


        </div>
    </div>



    <div> 
        <div>
            <a href="/create-comment" >
                <button class="btn-confirm">Create Comment</button>
            </a>
        </div>
        {{#each comments}}
        <div>
            <ul class="comment-details , comment-details-view">
                <li>{{this.authorId.username}}
                    <br>{{this.content}}</li>
            </ul>
        </div>
        {{/each}}
    </div>

</section>

